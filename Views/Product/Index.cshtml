@using _50DersteMvcProjeKampi.Models.Entity
@model List<tblProducts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2> Ürünler</h2>
@if (TempData["ErrorMessage"]!=null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Ürün Markası</th>
            <th>Ürün Kategorisi</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stok Sayısı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {

            <tr>
                <th>@product.ProductId</th>
                <td>@product.ProductName</td>
                <td>@product.ProductBrand</td>
                <td>@product.tblCategories.CategoryName</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductStocks</td>
                <td><a href="/Product/DeleteProduct/@product.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/GetProduct/@product.ProductId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>


@*DataTable*@
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />

<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            "language": {
                "sEmptyTable": "Tabloda veri yok",
                "sInfo": "_TOTAL_ kayıttan _START_ - _END_ arası görüntüleniyor",
                "sInfoEmpty": "0 kayıttan 0 - 0 arası görüntüleniyor",
                "sInfoFiltered": "(_MAX_ kayıttan filtrelenen)",
                "sLengthMenu": "_MENU_ kayıt göster",
                "sLoadingRecords": "Yükleniyor...",
                "sProcessing": "İşleniyor...",
                "sSearch": "Ara:",
                "sZeroRecords": "Eşleşen kayıt bulunamadı",
                "oPaginate": {
                    "sFirst": "İlk",
                    "sLast": "Son",
                    "sNext": "Sonraki",
                    "sPrevious": "Önceki"
                },
                "oAria": {
                    "sSortAscending": ": artan sütun sıralamasını aktifleştir",
                    "sSortDescending": ": azalan sütun sıralamasını aktifleştir"
                }
            }
        });
    });
</script>