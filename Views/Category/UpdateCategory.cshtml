@model _50DersteMvcProjeKampi.Models.Entity.tblCategories
@{
    ViewBag.Title = "UpdateCategory";
}

<h2> Kategori Güncelle</h2>
@using (Html.BeginForm("HtmlUpdateCategory", "Category", FormMethod.Post))
            {
                <div>
                    @Html.LabelFor(m=>m.CategoryId)
                    @Html.TextBoxFor(m=>m.CategoryId, new { @class="form-control", @readonly = "readonly" })
                    <br />
                    @Html.LabelFor(m=>m.CategoryName)
                    @Html.TextBoxFor(m=>m.CategoryName, new {@class = "form-control"})
                </div>
                <br />
                <div>
                    <button class="btn btn-warning">Kategori Güncelle</button>
                </div>
            }
